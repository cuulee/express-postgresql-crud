extends ../layout

block content
  h1 Albums

  a(href="/albums/new") New Album

  if albums
    table.table.table-striped
      thead
        tr
          th Genre
          th Artist
          th Album
      tbody
        for album in albums
          tr
            td= album.genre
            td= album.artist
            td: a(href="/albums/"+album.id id="album.name")= album.name
